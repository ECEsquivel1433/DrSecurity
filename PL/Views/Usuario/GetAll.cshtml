@model ML.Usuario
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>GetAll</h2>
<section>
    <div style"float:right;">
        @Html.ActionLink("Agregar", "Form", "Usuario", htmlAttributes: new { @class = "btn btn-success" })
    </div>
</section>
<section>
    <table class="table table-responsive table-bordered">
        <thead>
            <tr>
                <td class="text-center" style=" font-weight:bold;">Editar</td>
                <td class="text-center">IdUsuario </td>
                <td class="text-center">Nombre </td>
                <td class="text-center">Fecha de Nacimiento </td>
                <td class="text-center">Sexo </td>
                <td class="text-center">Estado de Nacimiento </td>
                <td class="text-center">CURP </td>
                <td class="text-center">Dirección </td>
                <td class="text-center" style=" font-weight:bold;">Eliminar</td>
            </tr>
        </thead>
        <tbody>
            @foreach (ML.Usuario usuario in Model.Usuarios)
            {
                <tr>
                    <td class="text-center"><a class="btn btn-warning glyphicon glyphicon-edit" href="@Url.Action("Form", "Usuario", new { IdUsuario = usuario.IdUsuario })"></a></td>
                    <td>@usuario.IdUsuario</td>
                    <td>@usuario.Nombre  @usuario.PrimerApellido @usuario.SegundoApellido</td>
                    <td>@usuario.FechaNacimiento </td>
                    <td>@usuario.Sexo </td>
                    <td>@usuario.EstadoNacimiento </td>
                    <td>@usuario.CURP </td>
                    <td>@usuario.Direccion.Colonia.Nombre @usuario.Direccion.Colonia.Municipio.Nombre @usuario.Direccion.Colonia.Municipio.Estado.Nombre </td>
                    <td class="text-center"><a class="btn btn-danger glyphicon glyphicon-trash" href="@Url.Action("Delete" ,"Usuario", new { IdUsuario = usuario.IdUsuario})" onclick="return confirm('Estas seguro que deseas eliminar este registro?');"></a></td>
                </tr>           }
        </tbody>

    </table>
</section>